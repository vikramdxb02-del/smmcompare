// Prisma Schema for PanelHub - SMM Panel Database

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========================
// User & Authentication
// ========================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole  @default(USER)
  plan          Plan      @default(FREE)
  planExpiresAt DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts      Account[]
  sessions      Session[]
  lists         ServiceList[]
  orders        Order[]
  providers     UserProvider[]
  balanceAlerts BalanceAlert[]
  links         LinkList[]
}

enum UserRole {
  USER
  ADMIN
}

enum Plan {
  FREE
  PRO
  ENTERPRISE
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ========================
// SMM Providers
// ========================

model Provider {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  website     String
  apiUrl      String?
  description String?
  logo        String?
  trustScore  Float    @default(0)
  isVerified  Boolean  @default(false)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  services     Service[]
  userProvider UserProvider[]
}

model UserProvider {
  id         String   @id @default(cuid())
  userId     String
  providerId String
  apiKey     String   @db.Text
  balance    Float    @default(0)
  currency   String   @default("USD")
  isFavorite Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  orders   Order[]
  alerts   BalanceAlert[]

  @@unique([userId, providerId])
}

// ========================
// Services & Search
// ========================

model Service {
  id          String   @id @default(cuid())
  providerId  String
  serviceId   String   // Original ID from the provider
  name        String
  category    String
  type        String?
  rate        Float    // Price per 1000
  minQuantity Int
  maxQuantity Int
  description String?  @db.Text
  refill      Boolean  @default(false)
  cancel      Boolean  @default(false)
  dripfeed    Boolean  @default(false)
  avgTime     String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  provider     Provider      @relation(fields: [providerId], references: [id], onDelete: Cascade)
  listServices ListService[]
  orders       Order[]

  // Index for fast searching
  @@index([category])
  @@index([name])
  @@index([rate])
  @@unique([providerId, serviceId])
}

// ========================
// Service Lists
// ========================

model ServiceList {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  isArchived  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user     User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  services ListService[]
}

model ListService {
  id            String   @id @default(cuid())
  listId        String
  serviceId     String
  isFavorite    Boolean  @default(false)
  notes         String?
  createdAt     DateTime @default(now())

  // Relations
  list    ServiceList @relation(fields: [listId], references: [id], onDelete: Cascade)
  service Service     @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@unique([listId, serviceId])
}

// ========================
// Link Management
// ========================

model LinkList {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  links Link[]
}

model Link {
  id        String   @id @default(cuid())
  listId    String
  url       String
  label     String?
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())

  // Relations
  list   LinkList @relation(fields: [listId], references: [id], onDelete: Cascade)
  orders Order[]
}

// ========================
// Orders
// ========================

model Order {
  id             String      @id @default(cuid())
  userId         String
  userProviderId String
  serviceId      String
  linkId         String?
  orderId        String      // Order ID from provider
  link           String
  quantity       Int
  charge         Float
  status         OrderStatus @default(PENDING)
  startCount     Int?
  remains        Int?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  // Relations
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userProvider UserProvider @relation(fields: [userProviderId], references: [id], onDelete: Cascade)
  service      Service      @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  linkRef      Link?        @relation(fields: [linkId], references: [id])
}

enum OrderStatus {
  PENDING
  PROCESSING
  IN_PROGRESS
  COMPLETED
  PARTIAL
  CANCELLED
  REFUNDED
}

// ========================
// Balance Alerts
// ========================

model BalanceAlert {
  id             String   @id @default(cuid())
  userId         String
  userProviderId String
  threshold      Float
  isActive       Boolean  @default(true)
  lastTriggered  DateTime?
  createdAt      DateTime @default(now())

  // Relations
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userProvider UserProvider @relation(fields: [userProviderId], references: [id], onDelete: Cascade)

  @@unique([userId, userProviderId])
}




